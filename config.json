/*
 * debugger.io: An interactive web scripting sandbox
 */

{
  "ports": {
    "server": 8080
  },

  "db": {
    // add database credentials to deploy.json
    "port": 27017
  },

  "auth": {
    // add session secret key to deploy.json
    "cookie": "session",
    "hours": 0.1 // 6 minutes
  },

  // available to clients as GET /config
  "client": {
    // Default panel layout
    // One of: [layout-cols, layout-top, layout-left]
    "default_layout": "layout-col",

    // Default theme stylesheet
    // One of: [light, dark]
    "default_theme": "dark",

    // Default CDN to use
    // One of: [jsdelivr, cdnjs, google]
    "default_cdn": "jsdelivr",

    // Number of filtered CDN results to display at once
    "cdn_results": 16,

    // Debounce time for fetching CDN results, in ms
    "cdn_delay": 250,

    // Duration for flash messages before auto-dismissed, in ms
    "flash_duration": 8000,

    // Time between debounced updates on input, in ms
    "update_delay": 200,

    // Fallback locale to use if localized strings are missing from `locale`
    "base_locale": "en_US",

    // Default locale to use
    "locale": "en_US",

    // Autorun bugs by default
    "autorun": false,

    // Splash screen delay, in ms
    "splash_delay": 1000
  }
}
