/*
 * debugger.io: An interactive web scripting sandbox
 */

{
  "ports": {
    "server": 8080,
    "frame": 8081
  },

  "db": {
    "name": "debugger",
    "user": "debugger",
    "pass": "develop",
    "host": "localhost",
    "port": 27017
  },

  "auth": {
    "secret": "foobar",
    "cookie": "session",
    "hours": 0.1 // 6 minutes
  },

  "client": {
    "default_layout": "layout-col", // layout-cols, layout-top, layout-left
    "default_theme": "dark", // dark, light
    "panel_min": 52, // px, [theme].less:@panel_options_height + 10px
    "cdn_results": 32, // number of filtered CDN results to display
    "cdn_height": 219, // px, cdn.less:#cdn-results max-height
    "layout_time": 300, // ms
    "flash_duration": 4000, // ms
    "flash_top": 40, // px
    "flash_opacity": 0.9
  }
}
